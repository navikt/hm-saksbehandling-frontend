{
  "name": "hotsak-frontend",
  "version": "0.1.0",
  "type": "module",
  "author": "Team DigiHoT",
  "proxy": "http://localhost:5000",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.3.7",
    "path-to-regexp": "^6.2.0",
    "prettier": "^2.6.2"
  },
  "scripts": {
    "build": "cross-env-shell BUILD_PATH=../dist/client npm run build -w client -w server",
    "build-client": "npm run build -w client",
    "build-server": "npm run build -w server",
    "dev": "cross-env npm run dev -w client",
    "cypress:open": "npm run cypress:open -w client",
    "cypress:run": "npm run cypress:run -w client",
    "prepare": "is-ci || husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix --rule react-hooks/exhaustive-deps:off"
    ]
  },
  "msw": {
    "workerDirectory": "client/public"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
